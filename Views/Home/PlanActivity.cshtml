<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dojo Activity plan</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
    <style>
        .container{
            width: 900px;
            margin: 0 auto;
        }
        h3, h4{
            display: inline-block;
        }
        span{
            width: 400px;
            margin-left: 300px; 
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>Dojo Activity Center </h3> 
        <h4><span><a href="/Dashboard">Home</a></span></h4>
        <a href="/Logout">Log off</a>
        <hr>
        <h2>Create an Activity!</h2>
        @model ActivitiesValidate
        <form asp-action="AddActivity" asp-controller="Home" method="post">
            <span style="color:red" asp-validation-for="title"></span>
            <p>
                <label asp-for="title">Title: </label>
                <input type='text' asp-for='title'>
            </p>
            <span style="color:red" name="datetime"></span>
            <p>
                <label name="datetime">Time: </label>
                <input type="datetime-local" name="datetime">
            </p>
            <span style="color:red" name="date"></span>
            <p>
                <label name="date">Date: </label>
                <input type="date" name="date">
            </p>
            <span style="color:red" name="duration"></span>
            <p>
                <label name="duration">Duration: </label>
                <input type="text" name="duration">
                <select name="duration2" id="">
                    <option value="Minutes">Minutes</option>
                    <option value="Hours">Hours</option>
                    <option value="Days">Days</option>
                </select>
            </p>
            <span style="color:red" asp-validation-for="description"></span>
            <p>
                <p><label asp-for="description">Description: </label></p>
                <textarea asp-for="description" cols="30" rows="5"></textarea>
            </p>
            <p><button type='submit' class="btn btn-info">Create Activity</button></p>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/js/bootstrap.min.js" integrity="sha384-o+RDsa0aLu++PJvFqy8fFScvbHFLtbvScb8AjopnFD+iEQ7wo/CG0xlczd+2O/em" crossorigin="anonymous"></script>
</body>
</html>